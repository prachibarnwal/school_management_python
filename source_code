    for row in res:
        myTable.add_row(row)
    print("â˜†â"*20)
    print(myTable)
    print("â˜†â"*20,"\n")
    ch = input("Are You Sure You Want To Remove This Class From This School(yes/no) : ")
    if ch.lower() == 'yes':
        print("\n","ğŸƒğŸ¡"*15)
        q = "DELETE from classes where class_teacher like '"+name+"'"
        cur.execute(q)
        con.commit()
        print("\t\tCLASS DELETED ")
        print("ğŸƒğŸ¡"*15)

