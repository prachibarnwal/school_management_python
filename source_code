    q = 'select division,section,no_o_stu,location from classes where class_teacher like "'+name+'"'
    cur.execute(q)
    res = cur.fetchall()
    if len(res) == 0:
        print("No Such Class Details Found")
        return
    print("\n","ğŸƒğŸ¡"*15)
    print("\t\tCLASS DETAILS")
    print("ğŸƒğŸ¡"*15,"\n")
