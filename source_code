            print("\t\tTEACHER DETAILS")
            print("ğŸ‘€ğŸ¦š"*15)
            print("\n\n")
            myTable = PrettyTable(["Tid","Name","Age","Experience","D_O_Join","D_O_Bir","Phone","Email","Address","Sub_Name"])
            for row in res:
                myTable.add_row(row)
                print("â˜†â"*20)
            print(myTable)
            print("â˜†â"*20,"\n")
        elif ch == 2:
            q = "select * from Coach"
            cur.execute(q)
            res = cur.fetchall()
            print("ğŸ‘€ğŸ¦š"*15)
