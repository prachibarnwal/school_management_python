            for row in res:
                myTable.add_row(row)
            print("â˜†â"*20)
            print(myTable)
            print("â˜†â"*20)
            print("\n")
        elif choi == 2:
            q = "select cname,phone,cid from coach"
            cur.execute(q)
            res = cur.fetchall()
